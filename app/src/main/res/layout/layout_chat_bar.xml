<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:actionMenuTextColor="@color/color_white"
        android:background="@color/colorStatusBar"
        android:gravity="center"
        android:theme="@style/AppTheme.ToolbarStyle"
        app:contentInsetStartWithNavigation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageUser"
                android:layout_width="@dimen/dim_30"
                android:layout_height="@dimen/dim_30"
                android:src="@drawable/ic_user_stock" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtName"
                    style="@style/text_label_title_dark"
                    android:layout_marginStart="@dimen/dim_10"
                    android:text="@string/title_user_name"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/txtStatus"
                    style="@style/text_label_light"
                    android:layout_marginStart="@dimen/dim_10"
                    android:text="@string/title_status"
                    android:visibility="gone"
                    android:textSize="@dimen/font_size_10"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

</layout>