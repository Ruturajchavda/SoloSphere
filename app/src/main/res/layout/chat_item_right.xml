<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dim_8"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/dim_10">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_8">

                <TextView
                    android:id="@+id/txtMessage"
                    style="@style/text_label"
                    android:layout_centerVertical="true"
                    android:lineSpacingExtra="@dimen/dim_1"
                    android:maxWidth="@dimen/dim_180"
                    android:text="@string/text_sample_message"
                    android:textSize="@dimen/font_size_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toRightOf="@+id/txtMessage"
                    app:layout_constraintTop_toBottomOf="@id/txtMessage">

                    <TextView
                        android:id="@+id/txtTime"
                        style="@style/text_label_light"
                        android:text="@string/sample_time"
                        android:textColor="@color/silver"
                        android:textSize="@dimen/font_size_8" />

                    <ImageView
                        android:id="@+id/imgIsSeen"
                        android:layout_width="@dimen/dim_18"
                        android:layout_height="@dimen/dim_18"
                        android:padding="@dimen/dim_2"
                        android:src="@drawable/ic_single_check"
                        app:tint="@color/color_white" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>

