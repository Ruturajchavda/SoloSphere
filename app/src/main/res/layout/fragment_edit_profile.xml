<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim_20">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dim_120"
                android:layout_height="@dimen/dim_120"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="@dimen/dim_220"
                app:cardElevation="@dimen/dim_15">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_stock"
                    app:civ_border_color="@color/color_white"
                    app:civ_border_width="@dimen/dim_2" />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditProfile"
                style="@style/text_label"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@drawable/gray_border"
                android:minHeight="0dp"
                android:padding="@dimen/small_margin"
                android:text="@string/edit_profile_image"
                android:textAllCaps="false"
                android:textColor="@color/color_white" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_25"
                android:hint="@string/hint_full_name"
                android:textColorHint="@color/colorHint"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    style="@style/editTextWithNoBg"
                    android:background="@drawable/bg_input"
                    android:drawableStart="@drawable/ic_user"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etPhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_15"
                android:hint="@string/hint_phone"
                android:textColorHint="@color/colorHint"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    style="@style/editTextWithNoBg"
                    android:background="@drawable/bg_input"
                    android:drawableStart="@drawable/ic_phone"
                    android:inputType="number"
                    android:maxLength="10" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                style="@style/btn_filled_login"
                android:layout_width="@dimen/dim_160"
                android:layout_marginTop="@dimen/dim_20"
                android:text="@string/btn_update"
                app:elevation="@dimen/dim_10" />


        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/loadingView"
        layout="@layout/loading_view"
        android:visibility="gone" />
</RelativeLayout>
