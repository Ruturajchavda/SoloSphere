<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/editEvent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageEvent"
                    android:layout_width="@dimen/dim_50"
                    android:layout_height="@dimen/dim_50"
                    android:src="@drawable/demo_event_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dim_10"
                    android:paddingEnd="@dimen/dim_10">

                    <TextView
                        android:id="@+id/txtDateTime"
                        style="@style/text_label"

                        android:text="@string/title_event_time"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txtEvent"
                        style="@style/text_label_title_dark"
                        android:layout_marginTop="@dimen/dim_3"
                        android:text="@string/title_event_name"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/txtLocation"
                        style="@style/text_label_light"
                        android:layout_marginTop="@dimen/dim_3"
                        android:text="@string/title_event_location"
                        android:textColor="@color/silver"
                        android:textSize="@dimen/font_size_10" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dim_3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dim_12"
                            android:layout_height="@dimen/dim_12"
                            android:layout_marginEnd="@dimen/dim_3"
                            android:src="@drawable/ic_user"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/txtAttendee"
                            style="@style/text_label"
                            android:text="@string/title_attendee"
                            android:textSize="@dimen/font_size_10" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/editEvent"
                android:layout_width="@dimen/dim_30"
                android:layout_height="@dimen/dim_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dim_5"
                android:src="@drawable/edit_profile" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_1"
            android:background="@color/colorOverlay" />

    </LinearLayout>
</layout>