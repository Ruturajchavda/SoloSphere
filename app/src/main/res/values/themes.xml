<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SoloSphereEvents" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorStatusBar</item>
        <item name="colorSurface">@color/color_white</item>

        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>

        <item name="colorControlActivated">@color/color_white</item>
        <item name="colorControlHighlight">@color/color_white</item>
    </style>

    <style name="Theme.SoloSphereEvents" parent="Base.Theme.SoloSphereEvents" />

    <style name="AppTheme.ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="text_label_title_toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_label_title_dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="text_label_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="editTextWithNoBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/dim_8</item>
        <item name="android:padding">@dimen/dim_16</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="btn_filled_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/btn_font_size</item>
        <item name="android:padding">@dimen/dim_10</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

</resources>